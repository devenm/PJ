<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.init.panjj.activity.PlayVideo"
    android:background="#111111"
    android:id="@+id/mainlayout">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="#11111111"
        android:theme="@style/MyMaterialTheme"
        app:popupTheme="@style/Theme.AppCompat.NoActionBar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/videoView"
            android:layout_gravity="center"
            android:visibility="gone"
            />
     <!--   <com.devbrackets.android.exomedia.ui.widget.EMVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            EMVideoView:useDefaultControls="true"
            />-->
        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/player_view"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quality"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:src="@mipmap/quality"
            android:background="@null"
            android:padding="@dimen/margin_5dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/add"
            android:background="#11111111"
            android:layout_gravity="bottom"
            android:visibility="visible"
            android:layout_below="@+id/player_view"
            >
            <VideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/videoViewAdd"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_gravity="left|bottom"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Advt"
                android:id="@+id/textView5"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="00:00"
                android:id="@+id/time"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reload"
                android:src="@mipmap/loading"
                android:background="@null"
                android:layout_gravity="center"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/potraitlayout"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_yallow_24dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_yallow_24dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_yallow_24dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_black_24dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_star_black_24dp"/>


                    <com.init.panjj.otherclasses.CustomTextViewRoboto
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Downloads : 122"
                        android:id="@+id/downloads"
                        android:layout_gravity="left|bottom"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginRight="@dimen/margin_15dp"
                        android:textColor="@color/white"
                        android:visibility="gone"/>

                    <com.init.panjj.otherclasses.CustomTextViewRoboto
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Views : 280"
                        android:id="@+id/views"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/viewcolor"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_marginBottom="@dimen/margin_5dp"></View>
                <at.blogc.android.views.ExpandableTextView
                    android:id="@+id/video_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="0"
                    android:ellipsize="end"
                    app:animation_duration="200"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:padding="@dimen/margin_2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:paddingLeft="70dp"
                    android:paddingRight="70dp"
                    android:id="@+id/downlodayout"
                    >
                    <com.init.panjj.otherclasses.CustomTextViewRoboto
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Download"
                        android:id="@+id/download"
                        android:layout_gravity="center"
                        android:drawableTop="@drawable/ic_download"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/margin_20dp"
                        android:textColor="@color/light_black"

                        />

                    <com.init.panjj.otherclasses.CustomTextViewRoboto
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Share"
                        android:id="@+id/share"
                        android:drawableTop="@drawable/ic_share_symbol"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/margin_15dp"
                        android:layout_marginRight="@dimen/margin_20dp"
                        android:textColor="@color/light_black"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Details"
                        android:id="@+id/info"
                        android:layout_marginLeft="@dimen/margin_20dp"
                        android:drawableTop="@drawable/ic_info_sign"
                        android:gravity="center"
                        android:textColor="@color/light_black"
                        android:layout_gravity="center"/>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/viewcolor"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:layout_marginBottom="@dimen/margin_5dp"></View>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/potraittitle"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:layout_margin="5dp"
                    android:text="Recommended Videos"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <!-- <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/potraitdesc"
                     android:textAppearance="?android:textAppearanceMedium"
                     android:layout_margin="5dp"
                     android:text="Description"
                     android:ellipsize="end"
                     android:maxLines="2"/>-->
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recomcontent"
                    android:background="#11ffffff"
                    android:layout_margin="5dp"></android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:id="@+id/recommendone"
                android:visibility="gone"
                android:background="#111111">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/panjicon"
                        android:id="@+id/recomoneimageview"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/videoplay_icon"
                        android:layout_gravity="center"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:layout_margin="5dp"
                        android:id="@+id/reconetitle"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:textAppearance="?android:attr/textAppearanceMediumInverse"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:layout_margin="5dp"
                        android:id="@+id/reconedesc"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:maxLines="2"/>
                </LinearLayout>
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/cancel"
                    android:id="@+id/cancle"
                    android:background="@null"
                    android:layout_margin="5dp"
                    android:scaleType="centerInside"/>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
