<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navigationBarColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

            <FrameLayout
                android:id="@+id/container_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
               <!-- <LinearLayout
                    android:id="@+id/container_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="#11111111"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Trailers"
                    android:id="@+id/trailer"
                    android:drawableTop="@mipmap/trai"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Movie"
                    android:id="@+id/movie"
                    android:drawableTop="@mipmap/movies"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Video Song"
                    android:id="@+id/video"
                    android:drawableTop="@mipmap/video"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Live Tv"
                    android:id="@+id/livetv"
                    android:drawableTop="@mipmap/liveicon"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center"/>
            </LinearLayout>
            <android.support.design.widget.TabLayout
                android:id="@+id/tabanim_tabs"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:tabMode="scrollable"
                app:tabGravity="fill"
                app:tabIndicatorColor="#f27c2d"
                app:tabIndicatorHeight="2dp"
                app:tabTextColor="#b1b0b0"
                app:tabSelectedTextColor="#ffffff"
                />
            &lt;!&ndash;<com.ogaclejapan.smarttablayout.SmartTabLayout
                android:id="@+id/tabanim_tabs"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:stl_indicatorGravity="bottom"
                app:stl_indicatorColor="#de6f33"
                app:stl_indicatorThickness="2dp"
                app:stl_indicatorCornerRadius="2dp"
                app:stl_defaultTabBackground="?attr/selectableItemBackground"
                app:stl_defaultTabTextColor="#fcfcfbfb"
                 app:stl_clickable="true"
                app:stl_drawDecorationAfterTab="false"
                app:stl_customTabTextLayoutId="@layout/custom_text"
                app:stl_defaultTabTextSize="20sp"/>&ndash;&gt;


            <com.init.panj.clases.CustomViewPager
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/pager"
                android:layout_weight="1"></com.init.panj.clases.CustomViewPager>
        </LinearLayout>-->
    </FrameLayout>

    </LinearLayout>

    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.init.panjj.activity.FragmentDrawer"
        android:layout_width="@dimen/nav_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer"
        />

</android.support.v4.widget.DrawerLayout>