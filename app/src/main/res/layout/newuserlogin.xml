<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/singupbackground">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/panjmain"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:background="#55111111">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:textColorHint="@color/textColorhint">
            <EditText android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="User Name / Phone Number"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:padding="@dimen/margin_5dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColorhint"
               />
        </android.support.design.widget.TextInputLayout>



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_20dp">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin ="@dimen/margin_5dp"
            android:textColorHint="@color/textColorhint"
            >
            <EditText android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Password"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceMedium"
                android:padding="@dimen/margin_5dp"
                android:textColor="@color/textColor"
                android:textColorHint="@color/textColorhint"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3"
       >
        <com.init.panjj.otherclasses.CustomTextViewRobotoBolod
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Log in"
            android:id="@+id/login"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#c2c1c1"
            android:paddingLeft="10dp"
            android:layout_margin="@dimen/margin_5dp"
            android:background="#262626"
            />
        <com.init.panjj.otherclasses.CustomTextViewRobotoBolod
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sign Up"
            android:id="@+id/signup"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#c2c1c1"
            android:paddingLeft="10dp"
            android:layout_margin="@dimen/margin_5dp"
            android:background="#262626"/>


    </LinearLayout>
<com.init.panjj.otherclasses.CustomTextViewHelvetica
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Forgot Password ?"
    android:id="@+id/forgetpassword"
    android:layout_above="@+id/login_button"
    android:gravity="center"
    android:textAppearance="?android:textAppearanceMedium"/>
    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</LinearLayout>