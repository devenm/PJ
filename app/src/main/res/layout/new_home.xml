<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <android.support.v4.view.ViewPager
        android:id="@+id/banercontent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewpagerheight"
        />
<com.viewpagerindicator.CirclePageIndicator
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/indicator"
    android:layout_margin="10dp"
    />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imageView1110"
            android:src="@drawable/bannercheck"
            android:visibility="gone"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
        android:padding="2dp">

            <TextView
                android:id="@+id/trendingnow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trending"
                android:textColor="@color/textColorPrimary"
               android:textAppearance="?android:textAppearanceMedium"
                />
            <com.init.panj.clases.CustomTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="See All"
                android:gravity="right"
                android:textColor="#c9c6c6"/>
        </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/firstcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:padding="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/featured"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Movies "
                android:textColor="@color/textColorPrimary"
               android:textAppearance="?android:textAppearanceMedium" />

            <com.init.panj.clases.CustomTextView
                android:id="@+id/featuredall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="2dp"
                android:layout_weight="0"
                android:text=" See All "
                android:textColor="#c9c6c6"
                android:textAppearance="?android:textAppearanceMedium" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/seccontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>
