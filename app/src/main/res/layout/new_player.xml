<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:EMVideoView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.init.panj.activity.PlayVideo"
    android:background="#111111"
    android:id="@+id/mainlayout">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="#11111111"
        android:theme="@style/MyMaterialTheme"
        app:popupTheme="@style/Theme.AppCompat.NoActionBar" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame"
        >
        <VideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/videoView"
            android:layout_gravity="center"
            android:visibility="gone"
            />

        <com.devbrackets.android.exomedia.ui.widget.EMVideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            EMVideoView:useDefaultControls="true"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quality"
            android:layout_gravity="right|top"
            android:layout_margin="5dp"
            android:src="@mipmap/quality"
            android:background="@null"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/add"
            android:background="#111111"

            >
            <VideoView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/videoViewAdd"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_gravity="left|bottom"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Advt"
                android:id="@+id/textView5"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="00:00"
                android:id="@+id/time"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="5dp"
                android:visibility="gone"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reload"
                android:src="@mipmap/loading"
                android:background="@null"
                android:layout_gravity="center" />
            <android.support.v7.widget.RecyclerView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:id="@+id/recomcontent"
                android:background="#11ffffff"></android.support.v7.widget.RecyclerView>
        </FrameLayout>

        <!--  <ProgressBar
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/progressBar"
              android:layout_gravity="center"
              />-->




    </FrameLayout>
</RelativeLayout>
