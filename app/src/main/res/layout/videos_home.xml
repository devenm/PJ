<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgriedeant"
    android:fillViewport="true"
    android:scrollbars="none"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="250dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/banercontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageView12"
        android:layout_gravity="center"
        android:src="@mipmap/videoplay_icon"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share"
        android:src="@mipmap/share"
        android:gravity="center"
        android:layout_gravity="right|top"
        android:layout_margin="10dp"
        android:background="#44111111"/>

</FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#44111111"
            android:paddingTop="5dp"
            android:orientation="horizontal"
            >


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Download"
                android:id="@+id/download"
                android:layout_gravity="left|bottom"
                android:drawableTop="@mipmap/download"
                android:layout_weight="1"
                android:gravity="center"/>



            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/like"
                android:layout_weight="1"
                android:drawableTop="@mipmap/like"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/views"
                android:layout_weight="1"
                android:drawableTop="@mipmap/views"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Information"
                android:id="@+id/info"
                android:layout_weight="1"
                android:drawableTop="@mipmap/circle"
                android:gravity="center"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Similar Videos "
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"
                android:id="@+id/similardata" />


        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/similar"
            android:layout_width="match_parent"
            android:layout_height="180dp">

        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:id="@+id/recomendedlayout">

            <TextView
                android:id="@+id/textView211"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recommended Trailers"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/trendmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="SEE ALL"
                android:textColor="#c9c6c6"
                android:textSize="15sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/firstcontent"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:id="@+id/recomendvideolayout">

            <TextView
                android:id="@+id/tview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recommended Videos "
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/songall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="2dp"
                android:layout_weight="0"
                android:text=" SEE ALL "
                android:textColor="#c9c6c6"
                android:textSize="15sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/seccontent"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Advertisement "
            android:textColor="#aca9a9"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:background="#545353"
            android:src="@drawable/adver"
            android:scaleType="fitXY"/>
    </LinearLayout>

</ScrollView>